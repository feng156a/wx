/* pages/modelselect/modelselect.wxss */
.container{
  position: absolute;
  top:0px;
  bottom: 0px;
  left:0px;
  right:0px;
  background-color: lightgray;
}
.color-block{
  width: 100%;
  height: 100px;
  background-color: #047120;
}
.inner-container{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  top:10px;
  left:10px;
  right:10px;
  bottom:10px;
}
.baseinfomation-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  min-height:20%;
  border-radius: 5px;
  background-color: white;
}
.headbar{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 30px;
  border-bottom: 1px solid lightgray;
  text-align: center;
}
.basename{
font-size: 15px;
color:#047120;
font-weight: bold;
}
.button-container{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  flex-wrap: wrap;
  margin-top:2%;
  width: 100%;
  border-radius: 5px;
  background-color: white; 
}
.buttonimg{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 33%;
  height: 80px;
  border-bottom: 0.2px solid #e3dfdf;
  align-content: center;

}
.imagestyle{
  width: 40px;
  height: 40px;
}
.buttonimg1{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 33%;
  height: 80px;
  align-content: center;
}
.buttonstyle{
  margin:5%;
  width: 20%;
}
.tapedstyle{
  background-color: #e7ebe8;
}