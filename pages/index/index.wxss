/**index.wxss**/
page{
background-color: #f5f5f5;
}
.content-text{
  color:#047120;
  font-size: 20px;
  font-weight: bold;
}
.container{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  top: 0;
  left:0;
  right:0;
  bottom: 0;
}
.item-container{
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 50px;
}
.userinfo{
  display: flex;
  flex-direction: column;
  width: 100%;
  
}
.userinfo_bottomblock{
position: absolute;
top:0px;
left:4%;
right:4%;
height: 100px;
border-radius: 10px;
background-color: white;
box-shadow: 1px 1px 1px 1px #e0e3e1;
}
.userinfo_photo{
position: absolute;
border: 1px white solid;
overflow: hidden;
border-radius: 50%;
width: 50px;
height: 50px;
top: 10px;
left:10px;
}
.nickName{
  position:absolute;
  top:20px;
  left:80px;
  font-size: 16px;
  font-weight: bold;
  color: #047120;  
}
.info_score{
  position:absolute;
  height: 20px;
  bottom: 0px;
  left:0px;
  right:0px;
  border-top: 1px solid #e0e3e1;
  color: gray;
  font-size: 10px;
}
.islogin{
  position:absolute;
  top:50px;
  left:76px;
  font-size: 6px;
  width:25px;
  height: 10px;
  text-align: center;
  border: 1px solid #047120;
  border-radius: 5px;
}
