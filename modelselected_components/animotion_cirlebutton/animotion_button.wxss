/* modelselected_components/animotion_cirlebutton/animotion_button.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  height: 100%;
}
.button{
  width:50px;
  height: 50px;
  overflow: hidden;
  border-radius: 50%;
  border:1px solid lightgray;
}
.wave-container{
  width:300%;
  height: 120%;
}

.wave-green{
  width: 400%;
  height: 200%;
  position:relative;
  left:0;
  animation: move-back 6s ease-in infinite;
}
.wave-green-1{
  width: 400%;
  height: 200%;
  position:relative;
  top:-200%;
  left:0;
  animation: move-front 4s ease-in infinite;
}
@keyframes move-front{
  from{left:-200%;}
  to{left:0%;}
}
@keyframes move-back{
  from{left:-200%;}
  to{left:0%;}
}
.text{
  margin-top:10px;
  font-size: 10px;
  font-weight: bold;
  color: #047120;
}