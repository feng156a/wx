/* components/navigationpanel.wxss */
.container{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  background-color: white;
}
.headbar
{
position:absolute;
display: flex;
flex-direction: row;
align-items: center;
justify-items: flex-start;
top:0;
left:0;
width:100%;
height: 30px;
align-content: center;
border-bottom: 1px solid lightgray;
}
.tips{
display: block;
width: 200;
}
.tipstext{
margin-left:10px;
color: lightgray;
font-size: 10px;
}
.closebutton{
  position: absolute;
  right: 5px;
  top:5px;
  width: 25px;
  height: 25px;
  opacity: 0.5;
}
.buttoncontainer{
  position:absolute;
  overflow: scroll;
 display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  top:35px;
  left:0;
  width:100%;
}

.circlebutton{
  display: block;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin:5px;
  text-align: center;
  color: white;
  opacity: 0.7;
}
.numberstyle{
  width:100%;
  height:100%;
  line-height:30px;
}