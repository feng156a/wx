/* components/Dialog.wxss */
.shade{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background-color: gray;
  opacity: 0.3;
}
.container{
  position: absolute;
  left:20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  top:30%;
  width: 60%;
  height: 20%;
  background-color: white;
  border-radius: 8px;
}
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 70%;
  word-break: true;
  font-size: 15px;
}
.message{
  margin:6px;
  word-break: break-all;
}
.buttons{
  display: flex;
  flex-direction: row;
  align-items: left;
  width: 100%;
  height: 30%;
}
.yes{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  border-top: 1px solid lightgray; 
  border-right: 1px solid lightgray; 
  text-align: center;
  
}
.no{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  border-top: 1px solid lightgray; 
  text-align: center;
  
}