/* pages/baseListItem.wxss */
.container{
  display: flex;
  flex-direction: row;
  overflow: hidden;
  width: 100%;
  border-radius: 10px;
  
}
.items{
  display:flex;
  flex-direction: row;
  align-items: flex-start;
  width: 100%;
  position: relative;
  background-color: #ffffff;
}
.infos{
  display:flex;
  flex-direction: column;
  align-items:flex-start;
  justify-content: center;
  line-height: 1.5;
}
.list-item-icon-image{
  width: 50px;
  height: 50px;
}
.list-item-icon{
 margin:5px;
}
.name{
  font-size: 15px;
  font-weight: bold;
  color: #047120;
}
.intr{
  font-size: 11px;
  color: lightgrey;
  text-align: center;
  line-height: 30px;
}

.delBtn{
position: absolute;
display: flex;
height: 100%;
width:60px;
right:-60px;
top:0;
background-color: #047120;
align-items: center;
justify-content: center;
}
.hover-start{
  background-color: #a8fab1;
}
