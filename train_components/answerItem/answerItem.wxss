/* components/answerItem/answerItem.wxss */
.container{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: flex-start;
  min-height: 50px;
  border-left: 5px solid;
  border-radius: 5px; 
  overflow: hidden;
}
.answerflag{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 13%;
  height: 100%;
  
}
.answercontent{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  width: 85%;
}
.answercontent-text{
  text-align: left;
  font-size: 12px;
}